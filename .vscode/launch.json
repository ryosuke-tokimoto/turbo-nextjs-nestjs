  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Next.js",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "--filter=client", "start"],
      "restart": true,
      "console": "integratedTerminal"
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Debug Client",
      "url": "http://localhost:4200",
      "port": 9229,
      "webRoot": "${workspaceFolder}/packages/client",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "--filter=server", "start"],
      "restart": true,
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Debug",
      "configurations": ["Debug Next.js", "Debug Client", "Debug Server"]
    }
  ]
}
